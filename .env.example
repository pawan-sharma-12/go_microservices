ACCOUNT_SERVICE_URL=localhost:50051
ACCOUNT_SERVICE_PORT=50051

# CATALOG SERVICE
CATALOG_DATABASE_URL=postgres://username:password@localhost:5432/catalogdb?sslmode=disable
